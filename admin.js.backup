function removeCustomSection(index) {
    const items = document.querySelectorAll('.custom-section-item');
    if (items[index]) {
        items[index].remove();
    }
    
    // Show "no sections" message if all removed
    const container = document.getElementById('customSections');
    if (container.querySelectorAll('.custom-section-item').length === 0) {
        container.innerHTML = '<p style="color: #666;">No custom sections yet. Click "Create New Section" to add one.</p>';
